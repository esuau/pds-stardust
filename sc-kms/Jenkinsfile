pipeline {

    agent any

    tools {
        jdk 'java11'
    }

    stages {

        stage('Continuous Integration') {

            stages {

                stage('Fetch from SCM') {

                    steps {
                        checkout scm
                    }

                }

                stage('Build') {
                    steps {
                        dir("sc-kms/") {
                            sh '''
                                chmod +x gradlew
                                ./gradlew clean build
                            '''
                        }
                    }
                }

                stage('Test') {
                    steps {
                        dir("sc-kms/") {
                            sh '''
                                ./gradlew test
                            '''
                        }
                    }
                }

                stage("SonarQube analysis") {
                    steps{
                        dir("sc-kms") {
                            withSonarQubeEnv('sonarqube') {
                                sh '''
                                    ./gradlew sonarqube
                                '''
                            }
                        }
                    }
                }
                
                stage("Quality Gate") {
                    steps {
                        sh 'sleep 5'
                        waitForQualityGate abortPipeline: true
                    }
                }
            }

            post {
                always {
                    junit 'sc-kms/build/test-results/**/*.xml'
                    recordIssues(tools: [spotBugs(pattern: 'sc-kms/build/reports/spotbugs/*.xml')])
                    cleanWs()
                }
            }

        }

    }
}